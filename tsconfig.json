{
    "version": "1.5.0-beta",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.ts",
        "./test/**/*.ts",
        "./node_modules/freya-next/freya-next.d.ts"
    ],
    "files": [
        "./src/connection.ts",
        "./src/lang.ts",
        "./src/main.ts",
        "./src/transport.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/jasmine/jasmine.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./typings/vendor/object-tree.d.ts",
        "./test/transport.ts"
    ]
}
